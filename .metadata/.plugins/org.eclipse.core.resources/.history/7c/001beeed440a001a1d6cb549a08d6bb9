package com.project.controller;

import java.util.List;

import org.springframework.http.HttpStatus;
import org.springframework.http.ResponseEntity;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.RequestBody;
import org.springframework.web.bind.annotation.ResponseBody;

import com.project.dao.GroceryRepo;
import com.project.pojo.GroceryList;

public class GroceryController {
	private GroceryRepo gr;

///////////////////////////////////////////////////////////////////////////////////////////////////////////
///////////////////////////////////////////////////////////////////////////////////////////////////////////
/////////////////////////////////Get all Grocery List////////////////////////////////////////////////////////////
	 @GetMapping(value="getAllGL.app")
	    public ResponseEntity<List<GroceryList>> getAllGL(){
	        return new ResponseEntity<List<GroceryList>>(gr.allGL(), HttpStatus.OK);
	    }
	    
	
///////////////////////////////////////////////////////////////////////////////////////////////////////////
///////////////////////////////////////////////////////////////////////////////////////////////////////////
/////////////////////////////////Inserting Grocery List////////////////////////////////////////////////////////////

	@PostMapping(value="/grocery-list.app")
    public @ResponseBody GroceryList insertGL (@RequestBody GroceryList GL) {
        System.out.println(GL);
        gr.InsertGL(GL);
        return GL;
	}
        
///////////////////////////////////////////////////////////////////////////////////////////////////////////
///////////////////////////////////////////////////////////////////////////////////////////////////////////
/////////////////////////////////Inserting new Item to GL////////////////////////////////////////////////////////////
    
	@PostMapping(value="/grocery-list/item.app")
    public @ResponseBody GroceryList insert(@RequestBody GroceryList GL) {
        System.out.println(GL);
        gr.InsertGL(GL);
        return GL;
	}
	
}
